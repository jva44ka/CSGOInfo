<Window x:Class="WpfLawyersSystem.Views.LoadSaveTheme"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLawyersSystem.Views"
        mc:Ignorable="d"
        Title="LoadSaveTheme" Height="300" Width="400"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent">
    
    <!--Background="{StaticResource LoadSaveBrush}"-->
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="../Img/LoadSaveImage.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <Label x:Name="MainLabel" Style="{StaticResource BaseLabel}" FontSize="{StaticResource H1}" HorizontalContentAlignment="Center"
           VerticalContentAlignment="Center">
        </Label>
    </Grid>
</Window>
